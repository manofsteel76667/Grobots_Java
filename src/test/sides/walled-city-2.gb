else
	random-edge-position center v- rect-to-polar swap wall-radius 1.2 * 13 + min swap
	polar-to-rect center v+
then
 wander-dest!
return

run-away:
		new-wander-loc^
		0 have-meal!
		1 running-away!
		time last-danger-time!
		position last-danger-position!

return

